context-menu
    position absolute
    top 0
    left 0
    opacity 0
    visibility hidden
    {shad}
    border-radius br
    border 1px solid bd
    background white
    z-index 900
    width max-content
    height max-content
    text-align left
    transform translate(0, 0.5rem)
    {transshort}
    transition-property visibility, opacity, transform
    &.opened, & a:hover &, & a:focus &
        opacity 1
        visibility visible
        transform translate(0, 0)
    context-menu
        transition 0.35s 0.25s ease all
        transform translate(-0.5rem, 0)
        &.opened, context-menu a:hover context-menu, context-menu a:focus context-menu
            transition 0.15s 0.15s ease all
    a context-menu
        left 100%
        top 0
    a, context-menu a
        &:first-child
            border-top-left-radius br
            border-top-right-radius br
        &:last-child
            border-bottom-left-radius br
            border-bottom-right-radius br
        color text
        {trans}
        i
            position absolute
            left 0.8rem
            top 0.35rem
            color act
            &::before
                font-size 1.125rem
        &:hover, &:focus
            color white
            background-color act
            & > i
                color white
            {transshort}
        &:active
            background-color accent1
            {transshort}
        &.submenu::after
            @extends .icon-chevron-right:before
            font-family icomoon
            font-size 1.5rem
            right 0.5rem
            position absolute
            color bd
    a, a.checkbox
        display block
        position relative
        padding 0.25rem 1rem 0.25rem 2.5rem
        margin 0
        cursor pointer
    a.checkbox
        [type="checkbox"], [type="radio"]
            left 1rem
            top 0.75rem
    .separator
        padding 0
        margin 0.5rem 0
        border-top 1px solid bd
        cursor initial